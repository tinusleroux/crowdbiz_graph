# CrowdBiz Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Supabase Configuration (Primary Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_API_KEY=your_supabase_anon_key
SUPABASE_DATABASE_PASSWORD=your_database_password

# Alternative PostgreSQL connection format
SUPABASE_HOST=your-host.supabase.com
SUPABASE_DB_NAME=postgres
SUPABASE_USER=postgres
SUPABASE_PASSWORD=your_password
SUPABASE_PORT=6543

# AI API Keys for Research Features
OPENAI_API_KEY=your_openai_api_key
GEMINI_API_KEY=your_gemini_api_key

# Application Configuration
LOG_LEVEL=INFO
API_HOST=localhost
API_PORT=8000

# Optional: Redis for caching (if implemented)
REDIS_URL=redis://localhost:6379

# Optional: Email configuration (for future features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
API_PORT=8000

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Monitoring
GRAFANA_PASSWORD=your_grafana_admin_password

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Import Configuration
IMPORT_BATCH_SIZE=100
MAX_WORKERS=4

# Export Configuration
EXPORT_MAX_RECORDS=10000
EXPORT_FORMATS=csv,json,xlsx
